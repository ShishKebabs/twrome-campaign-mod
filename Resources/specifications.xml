	<!-- Blocked Software-->
	<spec>
		<conditions>
			<and>
				<OS_version_major><less>10</less></OS_version_major>
			</and>
		</conditions>
		<alert stock_id="BlockedSoftware">
			<replace>
				<from>#{min}</from>
				<to>10 RS5 1809 (10.0.17763)</to>
			</replace>
		</alert>
	</spec>



	<!-- Unsupported Hardware-->
	<spec>
		<uuid>UnsupportedHardware_b409</uuid>
		<conditions>
			<or>
				<!--Single core CPUs not supported-->
				<CPU_physical_cores><less>2</less></CPU_physical_cores>
				<!--Hardware with less than 6GB RAM not supported-->
				<RAM><less>5499M</less></RAM>
				<!-- Nvidia and AMD GPUs with less than 800 MB VRAM not supported-->
				<and>
					<or>
						<GPU_vendor><is>amd</is></GPU_vendor>
						<GPU_vendor><is>nvidia</is></GPU_vendor>
					</or>
					<VRAM><less>800M</less></VRAM>
				</and>
				<!--8GB RAM required for Intel integrated graphics-->
				<and>
					<GPU_vendor><is>intel</is></GPU_vendor>
					<RAM><less>7499M</less></RAM>
				</and>
			</or>
		</conditions>
		<alert stock_id="UnsupportedPlayableDoNotNotify" />
        <ignore_if_set>SkipUnsupportedHardwareCheck</ignore_if_set>
        <regkey><value name="DoneUnsupported" type="integer">1</value></regkey>
	</spec>


